# Tududi Backend Environment Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: User Configuration
# =============================================================================
# Initial admin user credentials (used on first startup)
TUDUDI_USER_EMAIL=admin@example.com
TUDUDI_USER_PASSWORD=your-secure-password-here

# Session secret for cookie encryption (generate with: openssl rand -hex 64)
TUDUDI_SESSION_SECRET=your-session-secret-here

# =============================================================================
# OPTIONAL: Server Configuration
# =============================================================================
# Backend server host and port
# HOST=0.0.0.0
# PORT=3002

# Frontend URL (for CORS and redirects)
# FRONTEND_URL=http://localhost:8080

# Backend URL (for API calls)
# BACKEND_URL=http://localhost:3002

# =============================================================================
# OPTIONAL: CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
# Leave commented for localhost-only access
# Set to empty string "" to allow all origins (development only)
# TUDUDI_ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:8080

# =============================================================================
# OPTIONAL: Database Configuration
# =============================================================================
# Path to SQLite database file
# DB_FILE=/path/to/custom/location.sqlite3

# =============================================================================
# OPTIONAL: File Upload Configuration
# =============================================================================
# Path where uploaded files are stored
# TUDUDI_UPLOAD_PATH=/path/to/uploads

# =============================================================================
# OPTIONAL: Email/SMTP Configuration
# =============================================================================
# Enable email service (set to 'true' to enable)
ENABLE_EMAIL=false

# SMTP server configuration
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USERNAME=your-email@example.com
EMAIL_SMTP_PASSWORD=your-smtp-password

# Email sender configuration
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=Tududi

# Common SMTP Configurations:
#
# Gmail:
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_SECURE=false
# EMAIL_SMTP_USERNAME=your-email@gmail.com
# EMAIL_SMTP_PASSWORD=your-app-password (use App Password, not regular password)
#
# SendGrid:
# EMAIL_SMTP_HOST=smtp.sendgrid.net
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_SECURE=false
# EMAIL_SMTP_USERNAME=apikey
# EMAIL_SMTP_PASSWORD=your-sendgrid-api-key
#
# Mailgun:
# EMAIL_SMTP_HOST=smtp.mailgun.org
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_SECURE=false
# EMAIL_SMTP_USERNAME=your-mailgun-username
# EMAIL_SMTP_PASSWORD=your-mailgun-password

# =============================================================================
# OPTIONAL: Registration Configuration
# =============================================================================
# Token expiry time in hours for registration links
# REGISTRATION_TOKEN_EXPIRY_HOURS=24

# =============================================================================
# OPTIONAL: Feature Toggles
# =============================================================================
# Disable the task scheduler (recurring tasks, etc.)
# DISABLE_SCHEDULER=false

# Disable Telegram integration
# DISABLE_TELEGRAM=false
